<h1>Faça uma simulação</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @budget, url: {action: "create"} do |f| %>
      <div>
        <%= f.label :requester_name %>
        <%= f.text_field :requester_name %>
      </div>

      <div>
        <%= f.label :requester_email %>
        <%= f.email_field :requester_email %>
      </div>

      <div>
        <%= f.label :company_name %>
        <%= f.text_field :company_name %>
      </div>

      <div>
        <%= f.label :monthly_revenue %>
        <%= f.number_field :monthly_revenue %>
      </div>

      <div>
        <%= f.label :duplicate_value %>
        <%= f.number_field :duplicate_value %>
      </div>

      <div>
        <%= f.label :days_until_due_date %>
        <%= f.number_field :days_until_due_date %>
      </div>

      <div>
        <%= f.submit "Submeter", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
